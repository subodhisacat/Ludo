<pre id="result">Waiting for response...</pre>

<script>
async function getLudoResult() {
  const url = "https://ludo-king-api-room-code.p.rapidapi.com/result";
  const options = {
    method: "GET",
    headers: {
      "x-rapidapi-key": "05fa274456msh5f9ad7e1f51b6a0p107e8fjsnd7b641035618",
      "x-rapidapi-host": "ludo-king-api-room-code.p.rapidapi.com"
    }
  };

  document.getElementById("result").textContent = "‚è≥ Fetching data...";
  try {
    const res = await fetch(url, options);
    const data = await res.json();
    document.getElementById("result").textContent = JSON.stringify(data, null, 2);
  } catch (err) {
    document.getElementById("result").textContent = "‚ùå Error: " + err.message;
  }
}
</script>

